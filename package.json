{
    "name": "whisper-transcriber",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "start": "node dist/server.js",
        "dev": "node --loader ts-node/esm src/server.ts",
        "build": "tsc",
        "css:build": "tailwindcss -i ./public/styles.css -o ./public/output.css",
        "dev:css": "tailwindcss -i ./public/styles.css -o ./public/output.css --watch",
        "build:css": "tailwindcss -i ./public/styles.css -o ./public/output.css",
        "watch:css": "tailwindcss -i ./public/styles.css -o ./public/output.css --watch"
    },
    "dependencies": {
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "formidable": "^3.5.0",
        "socket.io": "^4.7.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/formidable": "^3.4.5",
        "autoprefixer": "^10.4.17",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1"
    }
}
